<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend_LeLire.Views.ContentPages.RegistrationPage"
             Title="RegistrationPage">
    <Grid>
        <Image Source="background_bloor.png"
               Aspect="AspectFill"></Image>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <VerticalStackLayout VerticalOptions="Start"
                                 HorizontalOptions="Center"
                                 Grid.Row="1"
                                 Spacing="12">
                <Label Text="Введите номер телефона"
                       TextColor="White"
                       FontSize="24"></Label>
                <Entry FontSize="21"
                       FontFamily="Literato-Regular"
                       TextColor="White"
                       x:Name="phoneEntry"
                       ReturnType="Done"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"></Entry>
                <Label Text="Введите пароль"
                       TextColor="White"
                       HorizontalOptions="Center"
                       FontSize="24"></Label>
                <Entry Placeholder="Пароль..."
                       IsPassword="True"
                       Completed="passwordEntry_Completed"
                       FontSize="21"
                       FontFamily="Literato-Regular"
                       TextColor="White"
                       x:Name="passwordEntry"
                       ReturnType="Done"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"></Entry>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>